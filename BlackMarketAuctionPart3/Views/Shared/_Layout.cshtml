<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Black Market Auctions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">Black Market Auctions</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li title="Home Page">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li title="Store Page">@Html.ActionLink("Store", "Index", "Auction")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>

            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
                    <footer class="footer">
                        <p>&copy; @DateTime.Now.Year - Black Market Auction House  ||   @Html.ActionLink("Contact", "Contact", "Home", htmlAttributes: new { title = "Contact us Here!" })  ||  @Html.ActionLink("About", "About", "Home", htmlAttributes: new { title = "Learn More About Us!" })</p>
                    </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/shoppingCart")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
